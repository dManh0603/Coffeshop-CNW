<h1>MENU</h1>
<div class="mt-4">
    <div class="row">
        {{#each products}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mt-2">
                <a href="/products/{{this.slug}}">
                    <img src="{{getImage this.imageId}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <h5 class="card-title">
                        {{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <div class="row">
                        <div class="col">
                            {{this.price}} đ
                        </div>
                        <div class="col">
                            <a href="/cart/add/{{this.slug}}" data-slug="{{this.slug}}"
                                class="btn btn-primary addToCardBtn">Thêm vào giỏ hàng</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script>
    $(document).ready(function () {
        const $addToCartBtn = $('.addToCardBtn');
        $addToCartBtn.click(function (e) {
            e.preventDefault();
            const $clickedBtn = $(this);
            const slug = $clickedBtn.data('slug');
            const url = $clickedBtn.attr('href');
            const data = {
                slug
            };
            $.ajax({
                url: '/cart/add/' + slug,
                type: 'POST',
                dataType: 'json',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (response) {
                    console.log('console:', response);
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });

        })
    })

</script>