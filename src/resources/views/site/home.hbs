<div class="mt-4">
    <div class="row">
        {{#each products}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mt-2">
                <a href="/products/{{this.slug}}">
                    <img src="{{getImage this.imageId}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <h5 class="card-title">
                        {{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>