<div class="row mt-4">
    <div class="col">
        <div class="card mt-2">
            <a href="/products/{{product.slug}}">
                <img src="{{getImage product.imageId}}" class="card-img-top" alt="...">
            </a>
            <div class="card-body">
                <h5 class="card-title">
                    {{product.name}}</h5>
                <p class="card-text">{{product.description}}</p>
            </div>
        </div>
    </div>
    <div class="col">
        <h3>Cập nhật sản phẩm</h3>
        <form method="POST" action="/products/{{product._id}}?_method=PUT" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="name" class="form-label">Tên sản phẩm</label>
                <input type="text" class="form-control" name="name" value="{{product.name}}" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Mô tả sản phẩm</label>
                <textarea class="form-control" name="description" rows="3">{{product.description}}</textarea>
            </div>

            <div class="mb-3">
                <label for="formFile" class="form-label">Tải ảnh sản phẩm</label>
                <input class="form-control" type="file" name="picture">
            </div>

            <div class="mb-3">
                <label for="name" class="form-label">Giá</label>
                <input type="number" class="form-control" name="price" required value="{{product.price}}">
            </div>

            <div class="form-check mb-3">
                {{#if product.isPublished}}
                <input class="form-check-input" type="checkbox" value="true" name="isPublished" checked>
                {{else}}
                <input class="form-check-input" type="checkbox" value="false" name="isPublished">
                {{/if}}
                <label class="form-check-label" for="flexCheckChecked">
                    Phát hành
                </label>
            </div>

            <button type="submit" class="btn btn-primary">Lưu</button>
        </form>
    </div>


</div>

<script>
    const $publishCheck = $('input[name="isPublished"]');
    // toogle the value of isPublished
    $publishCheck.change(function (e) {
        if (e.target.checked) {
            $publishCheck.val(true);
        } else {
            $publishCheck.val(false);
        }
        console.log($publishCheck.val());
    });

</script>