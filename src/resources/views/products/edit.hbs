<link rel="stylesheet" href="/css/edit.css" />
<div class="edit_container row">
  <h1 class="edit_title">Cập nhật sản phẩm</h1>
  <div class="edit_img col-lg-6 col-md-12">
    <div class="card mt-2">
      <a href="/products/{{product.slug}}">
        <img
          src="{{getImage product.imageId}}"
          class="edit card-img-top"
          alt="..."
        />
      </a>
    </div>
  </div>
  <div class="col-lg-6 col-md-12">

    <form
      method="POST"
      action="/products/{{product._id}}?_method=PUT"
      enctype="multipart/form-data"
    >

      <div class="mb-3">
        <label for="name" class="form-label">Tên sản phẩm</label>
        <input
          type="text"
          class="form-control"
          name="name"
          value="{{product.name}}"
          required
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Mô tả sản phẩm</label>
        <textarea
          class="form-control"
          name="description"
          rows="5"
        >{{product.description}}</textarea>
      </div>

      <div class="mb-3">
        <label for="formFile" class="form-label">Tải ảnh sản phẩm</label>
        <input class="form-control" type="file" name="picture" />
      </div>

      <div class="mb-3">
        <label for="name" class="form-label">Giá</label>
        <input
          type="number"
          class="form-control"
          name="price"
          required
          value="{{product.price}}"
        />
      </div>

      <div class="form-check mb-3">
        {{#if product.isPublished}}
          <input
            class="form-check-input"
            type="checkbox"
            value="true"
            name="isPublished"
            checked
          />
        {{else}}
          <input
            class="form-check-input"
            type="checkbox"
            value="false"
            name="isPublished"
          />
        {{/if}}
        <label class="form-check-label" for="flexCheckChecked">
          Phát hành
        </label>
      </div>

      <button type="submit" class="edit_btn btn">Lưu</button>
    </form>
  </div>

</div>

<script>
  const $publishCheck = $('input[name="isPublished"]'); // toogle the value of isPublished 
  $publishCheck.change(function (e) { if (e.target.checked) {
  $publishCheck.val(true); } else { $publishCheck.val(false); }
  console.log($publishCheck.val()); });

</script>